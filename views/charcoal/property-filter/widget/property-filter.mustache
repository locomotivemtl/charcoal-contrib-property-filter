<form id="{{ widgetId }}" class="c-filters c-table-container mt-2 mt-xl-4" method="post">
    <div class="row pb-2">
        <div class="col-6">
            <div class="o-header -small">
                {{#_t}}Filters{{/_t}}
            </div>
        </div>
        <div class="col-6">
            <div class="pt-2 pt-sm-3">
                <div class="text-right">
                    <button class=" btn btn-primary js-filter-apply" type="submit">
                        <i class="fa fa-filter"></i>
                        <span class="btn-label">{{#_t}}Filters{{/_t}}</span>
                    </button>
                    <button class="btn btn-danger js-filter-reset" type="reset">
                        <i class="fa fa-undo"></i>
                        <span class="btn-label text-">{{#_t}}Reset{{/_t}}</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="o-flex align-items-center">
        <div class="o-flex_main">
            <fieldset>
                {{# filters }}
                    {{# layout }}
                        {{ start }}
                        {{# cellStartsRow }}

                        <section class="o-section">
                        <div class="row">
                        {{/ cellStartsRow }}
                    {{/ layout }}

                    <div{{# layout }} class="col-md-{{ cellSpanBy12 }}"{{/ layout }}>
                        {{> charcoal/admin/widget/form-property-widget }}
                    </div>

                    {{# layout }}
                        {{# cellEndsRow }}
                        </div>
                        </section>

                        {{/ cellEndsRow }}
                        {{!-- Hack: Execute end layout --}}
                        {{ end }}
                    {{/ layout }}
                {{/ filters }}
            </fieldset>
        </div>
    </div>
</form>
